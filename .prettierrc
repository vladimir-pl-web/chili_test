{
 "trailingComma": "es5",
 "tabWidth": 2,
 "singleQuote": false,
 "semi": true,
 "printWidth": 80,
 "useTabs": false,
 "bracketSpacing": true,
 "arrowParens": "always",
 "parser": "typescript",
 "endOfLine": "auto",
 "overrides": [
  {
   "files": [
    "*.mts",
    "*.cts",
    "*.ts"
   ],
   "options": {
    "parser": "typescript"
   }
  },
  {
   "files": [
    "*.json",
    "*.jsonc",
    "*.json5"
   ],
   "options": {
    "parser": "json"
   }
  },
  {
   "files": [
    "*.css",
    "*.scss",
    "*.sass"
   ],
   "options": {
    "parser": "scss"
   }
  }
 ]
}